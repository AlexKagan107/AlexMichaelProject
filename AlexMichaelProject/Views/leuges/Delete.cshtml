@model AlexMichaelProject.Models.leuge

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <div class="col-md-3" style="width:20%;float:left;">
        @{ Html.RenderAction("SideMenu", "Home");}
    </div>
    <h3>Are you sure you want to delete this?</h3>
    <div class="col-md-3" style="width:80%;float:left;margin-top:20px;">
        <h4>leuge @Model.leugeName</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                League:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.leugeName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-left:44px;">
                @if ((String)Session["power"] == "admin")
                {
                    <input type="submit" value="Delete" class="btn btn-default" />
                }
            </div>
        }
    </div>
    <br />
    <div class="col-md-3" style="width:80%;float:left;margin-top:20px;">
        <p class="btn btn-primary btn-md">
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</body>
</html>

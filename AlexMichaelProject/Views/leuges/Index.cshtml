@model IEnumerable<AlexMichaelProject.Models.leuge>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div id="show">
        <div class="col-md-3" style="width:20%;float:left;">
            @{ Html.RenderAction("SideMenu", "Home");}
        </div>

        <div class="col-md-3" style="width:80%;float:left;margin-top:20px;">
            @if ((String)Session["power"] == "admin")
            {
                <p class="btn btn-primary btn-success" style="background-color:lightgreen;">
                    @Html.ActionLink("Create New", "Create")
                </p>
            }
            <table class="table" style="width:500px;">
                <tr><th><h3>League Name</h3></th></tr>

                @foreach (var item in Model)
            {
                    <tr>
                        <td><h4>@Html.DisplayFor(modelItem => item.leugeName)</h4></td>
                        <td>
                            <p class="btn btn-primary btn-md" style="margin-right:5px; background-color:darkblue;">
                                @Ajax.ActionLink("Clubs", "clubLeuge", "teams", new { id = item.leugeName }, new AjaxOptions()
                       {
                           HttpMethod = "POST",
                           UpdateTargetId = "show"
                       })
                            </p>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

</body>
</html>

@model IEnumerable<AlexMichaelProject.Models.manufacturer>

@{
//Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if ((String)Session["power"] == "admin")
    {
        <p class="btn btn-primary btn-success" style="background-color:lightgreen;">
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    <table class="table">
        <tr>
            <th>
                Manufacturers
            </th>
            <th>
                WebSite
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.mname)
                </td>
                <td>
                    <a href=http://@Html.DisplayFor(modelItem => item.msite)>@Html.DisplayFor(modelItem => item.msite)</a>
                </td>
                <td>
                    @if ((String)Session["power"] == "admin")
                    {
                        <p class="btn btn-primary btn-md" style="margin-right:5px;background-color:yellow;">
                            @Html.ActionLink("Edit", "Edit", new { id = item.mname })
                        </p>
                        <p class="btn btn-primary btn-md" style="margin-right:5px; background-color:black;">
                            @Html.ActionLink("Delete", "Delete", new { id = item.mname })
                        </p>
                    }
                    <p class="btn btn-primary btn-md" style="margin-right:5px;background-color:grey;">

                        @Html.ActionLink("Details", "Details", new { id = item.mname })
                    </p>
                </td>
            </tr>
        }

    </table>
</body>
</html>

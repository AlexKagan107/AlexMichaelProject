@model AlexMichaelProject.Models.paymentoption

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div class="col-md-3" style="width:20%;float:left;">
        @{ Html.RenderAction("SideMenu", "Home");}
    </div>
    <div class="col-md-3" style="width:80%;float:left;margin-top:20px;">
        <h4>Paymentoption</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>CreditCard Number:</dt>
            <dd>@Html.DisplayFor(model => model.creditcardnumber)</dd>
            <dt>@Html.DisplayNameFor(model => model.creditcardcompany)</dt>
            <dd>@Html.DisplayFor(model => model.creditcardcompany)</dd>
            <dt>@Html.DisplayNameFor(model => model.expireddate)</dt>
            <dd>
                @{string date = Model.expireddate.ToString("dd/MM/yyyy");}
                @date
            </dd>
        </dl>
    </div>
    <p class="btn btn-primary btn-md" style="margin-right:5px;background-color:khaki;">
        @Html.ActionLink("Edit", "Edit", new { id = Model.creditcardnumber })
    </p>
    <p class="btn btn-primary btn-md">
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>

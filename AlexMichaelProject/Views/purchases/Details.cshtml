@model AlexMichaelProject.Models.purchase

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div class="col-md-3" style="width:20%;float:left;">
        @{ Html.RenderAction("SideMenu", "Home");}
    </div>
    <div class="col-md-3" style="width:80%;float:left;margin-top:20px;">
        <h4>purchase</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Username:</dt>
            <dd>@Html.DisplayFor(model => model.username)</dd>
            <dt>ProductID:</dt>
            <dd>@Html.DisplayFor(model => model.product1)</dd>
            <dt>CreditCard Number:</dt>
            <dd>@Html.DisplayFor(model => model.paymentoption.creditcardnumber)</dd>
            <dt>Date:</dt>
            <dd>@Html.DisplayFor(model => model.dateOfPurchase)</dd>
            <dt>DealID:</dt>
            <dd>@Html.DisplayFor(model => model.dealID)</dd>
        </dl>
    </div>
    <p class="btn btn-primary btn-md">
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>

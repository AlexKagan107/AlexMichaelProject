@*@model IEnumerable<AlexMichaelProject.Models.product>*@
@model IEnumerable<System.Collections.Generic.List<AlexMichaelProject.Models.product>>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>
    
    @{ 
        
        List<AlexMichaelProject.Models.product> CartItems = (List<AlexMichaelProject.Models.product>)Session[(String)Session["username"]+"-cart"];
    }
    <table class="table">
        <tr>
            <th>
                Product Code
            </th>
            <th>
                Manufacturer
            </th>
            <th>
                Club
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                Size
            </th>
            <th>
                Description
            </th>
            <th>
                Photo
            </th>
        </tr>

        @for (int i=0;i< CartItems.Capacity;i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].product1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].clubName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => CartItems[i].description)
                </td>
                <td>

                    <img src=@Html.DisplayFor(modelItem => CartItems[i].photo) style="width:40px;height:40px;" />
                </td>
                <td>
                    @if ((String)Session["power"] == "user")
                    {

                        <p class="btn btn-primary btn-md" style="margin-right:5px;background-color:aquamarine;">
                            @Html.ActionLink("Add To Cart", "AddToCart", new { id = CartItems[i].product1 })
                        </p>
                    }
                    <p class="btn btn-primary btn-md" style="margin-right:5px;background-color:grey;">
                        @Html.ActionLink("Details", "Details", new { id = CartItems[i].product1 })
                    </p>
                    @if ((String)Session["power"] == "admin")
                    {
                        <p class="btn btn-primary btn-md" style="margin-right:5px;background-color:yellow;">
                            @Html.ActionLink("Edit", "Edit", new { id = CartItems[i].product1 })
                        </p>
                        <p class="btn btn-primary btn-md" style="margin-right:5px; background-color:black;">
                            @Html.ActionLink("Delete", "Delete", new { id = CartItems[i].product1 })
                        </p>
                    }
                </td>

            </tr>
        }

    </table>

</body>
</html>